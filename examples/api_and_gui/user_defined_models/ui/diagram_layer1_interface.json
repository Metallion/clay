  "sql_after_migration": [
    "drop view if exists diagram_layer1_interfaces;",
    "create view if not exists diagram_layer1_interfaces as",
    "  select group_concat(id, ',') id,",
    "    node_id,",
    "    group_concat(number, ',') number,",
    "    group_concat(name, ',') name,",
    "    destination_id,",
    "    destination_node_id,",
    "    group_concat(destination_number, ',') destination_number,",
    "    group_concat(destination_name, ',') destination_name",
    "  from (",
    "    select ports.id id,",
    "      ports.node_id node_id,",
    "      ports.number number,",
    "      ports.name name,",
    "      destination_port_ids.id destination_id,",
    "      destination_port_ids.node_id destination_node_id,",
    "      destination_ports.number destination_number,",
    "      destination_ports.name destination_name",
    "    from ports",
    "      left outer join links",
    "        on ports.id = links.source_port_id",
    "      left outer join ports destination_ports",
    "        on links.destination_port_id = destination_ports.id",
    "      inner join (",
    "        select group_concat(id, ',') as id,",
    "            node_id from (",
    "              select ports.id id,",
    "                ports.node_id node_id",
    "              from ports",
    "              order by id asc)",
    "        group by node_id) as destination_port_ids",
    "        on destination_ports.node_id = destination_port_ids.node_id",
    "     order by id asc)",
    "  group by node_id,",
    "    destination_node_id;"
  ]
